<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Form View for  -->
    <record id="sale_order_sheet_form_view" model="ir.ui.view">
        <field name="name">sale.order.sheet.form.view</field>
        <field name="model">sale.order</field>
<!--        <field name="mode">primary</field>-->
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_confirm']" position="after">
                <button name="generate_md_sheet" type="object" string="Generate MD Sheet" states="sale" class="oe_highlight"/>
            </xpath>
             <xpath expr="//field[@name='sale_order_template_id']" position="after">
                 <field name="series_name"/>
                 <field name="style_name"/>
<!--                 <field name="color_code"/>-->
             </xpath>
            <xpath expr="//field[@name='payment_term_id']" position="after">
                 <field name="delivery_date"/>
                 <field name="delivery_way"/>
                <field name="total_sample_qty"/>
            </xpath>
        </field>
    </record>
</odoo>
