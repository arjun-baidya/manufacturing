<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Form View for  -->
    <record id="sample_pattern_cut_form_view" model="ir.ui.view">
        <field name="name">sample.pattern.cut.form.view</field>
        <field name="model">sample.pattern.cut</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="pattern_confirm" string="Confirm" states="draft" type="object" class="btn-primary"/>
                    <button name="pattern_cancel" string="Cancel" states="confirm" type="object" class="btn-primary"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirm"/>
                </header>
                <sheet>
                    <group>
                        <field name="received_name"/>
                        <field name="received_date"/>
                        <field name="target_date"/>
                    </group>
                </sheet>
                <footer>
                    <button name="update_pattern_cut_data" string="Update" type="object"/>
                    <button string="Cancel" special="cancel" class="btn btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Window Action  -->
    <record id="action_sample_pattern_cut" model="ir.actions.act_window" >
        <field name="name"> Sample Pattern Cut </field>
        <field name="res_model">sample.pattern.cut</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

        <!-- Menu Sections  -->
<!--    <menuitem id="sample_document_menu" name="Document Register" parent="merchandising_sheet_root" action="action_sample_document_register"/>-->
    <menuitem id="sample_pattern_cut_menu" name="Pattern Cutting" parent="menu_merchandising_configuration" action="action_sample_pattern_cut"/>

</odoo>
