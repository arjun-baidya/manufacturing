<odoo>
    <template id="report_estimate_report_id">
        <t t-foreach="docs" t-as="o">
            <div t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div class="oe_structure"/>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="mt16">
                                    <div>
                                        <h2 class="text-center">Estimate Report</h2>
                                        <hr style="border: 1px solid black;"/>
                                    </div>
                                    <div class="row">
                                        <div class="col-6">
                                            <span>Pattern Cut :
                                                <t t-esc="o.reference"/>
                                            </span>
                                            <br/>
                                            <span>Series Name :
                                                <t t-esc="o.series_name"/>
                                            </span>
                                            <br/>
                                            <span>Style Name :
                                                <t t-esc="o.style_no"/>
                                            </span>
                                        </div>
                                        <div class="col-6">
                                            <span>Brand Name :
                                                <t t-esc="o.brand_name"/>
                                            </span>
                                            <br/>
                                            <span>Pattern Maker Name :
                                                <t t-esc="o.pattern_maker_name.name"/>
                                            </span>
                                        </div>
                                    </div>
                                    <br/>
                                    <table width="100%" class="table table-bordered" style="border-color:black;">
                                        <thead>
                                            <tr>
                                                <th class="text-left">Material Details</th>
                                                <th class="text-left">Total Consumption</th>
                                                <th class="text-left">Unit</th>
                                                <th class="text-left">Loss %</th>
                                                <th class="text-left">Unit Price</th>
                                                <th class="text-left">Total</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <t t-foreach="o.order_line" t-as="line">
                                                <tr>
                                                    <td style="text-align:justify">
                                                        <a>
                                                            <t t-esc="line.product_id.name"/>
                                                        </a>
                                                    </td>
                                                    <td style="text-align:justify">
                                                        <a>
                                                            <t t-esc="'%.2f'% line.net"/>
                                                        </a>
                                                    </td>
                                                    <td style="text-align:justify">
                                                        <a>
                                                            <t t-esc="line.uom.name"/>
                                                        </a>
                                                    </td>
                                                    <td style="text-align:justify">
                                                        <a>
                                                            <t t-esc="'%.2f'% line.net_loss"/>
                                                        </a>
                                                    </td>
                                                    <td style="text-align:justify">
                                                        <a>
                                                            <t t-esc="line.unit_price"/>
                                                        </a>
                                                    </td>
                                                    <td style="text-align:justify">
                                                        <a>
                                                            <t t-esc=" '%.2f'% line.total"/>
                                                        </a>
                                                    </td>
                                                </tr>
                                            </t>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </t>
            </div>
        </t>
    </template>
</odoo>
