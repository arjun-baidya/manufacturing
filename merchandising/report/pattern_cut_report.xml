<odoo>
    <template id="report_pattern_cut_id">
        <t t-foreach="docs" t-as="o">
            <div t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div class="oe_structure"/>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="mt16">
                                    <div>
                                        <h2 class="text-center">Pattern Cut</h2>
                                        <hr style="border: 1px solid black;"/>
                                    </div>
                                    <div class="row">
                                        <div class="col-6">
                                            <span>Pattern Cut :
                                                <t t-esc="o.name"/>
                                            </span>
                                            <br/>
                                            <span>Series Name :
                                                <t t-esc="o.series_name"/>
                                            </span>
                                            <br/>
                                            <span>Style Name :
                                                <t t-esc="o.style_no"/>
                                            </span>
                                        </div>
                                        <div class="col-6">
                                            <span>Product :
                                                <t t-esc="o.product"/>
                                            </span>
                                            <br/>
                                            <span>Date :
                                                <t t-esc="o.received_date"/>
                                            </span>
                                            <br/>
                                            <span>Total Execution Time :
                                                <t t-esc="o.pattern_cut_duration"/>
                                            </span>
                                            <br/>
                                            <span>Receiver Name :
                                                <t t-esc="o.received_name"/>
                                            </span>
                                        </div>
                                    </div>
                                    <br/>
                                    <!--condition-->
                                    <t t-foreach="o.pattern_cut_line_ids" t-as="line">
                                        <t t-if="line.type == 'leather'">
                                            <span>Type :
                                                <t t-esc="line.type"/>
                                            </span>
                                        </t>
                                    </t>
                                    <table width="100%" class="table table-bordered" style="border-color:black;">
                                        <thead>
                                            <tr>
                                                <th class="text-left">Type</th>
                                                <th class="text-left">Quantity</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <t t-foreach="o.pattern_cut_line_ids" t-as="line">
                                                <t t-if="line.type == 'leather' ">
                                                    <tr>
                                                        <td style="text-align:justify">
                                                            <a>
                                                                <t t-esc="line.type"/>
                                                            </a>
                                                        </td>
                                                        <td>
                                                            <a>
                                                                <t t-esc="line.pcs"/>
                                                            </a>
                                                        </td>
                                                    </tr>
                                                </t>
                                            </t>
                                        </tbody>
                                        <tr>
                                            <td></td>
                                            <td>
                                                <t t-set="sum_row" t-value="0"/>
                                                <t t-foreach="o.pattern_cut_line_ids" t-as="line">
                                                    <t t-if="line.type=='leather' " t-set="sum_row" t-value="sum_row+line.pcs"/>
                                                </t>
                                                <span>Total : <t t-esc="sum_row"/></span>
                                            </td>
                                        </tr>
                                    </table>

                                    <!--condition-->
                                    <t t-foreach="o.pattern_cut_line_ids" t-as="line">
                                        <t t-if="line.type == 'lining'">
                                            <span>Type :
                                                <t t-esc="line.type"/>
                                            </span>
                                        </t>
                                    </t>
                                    <table width="100%" class="table table-bordered" style="border-color:black;">
                                        <thead>
                                            <tr>
                                                <th class="text-left">Type</th>
                                                <th class="text-left">Quantity</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <t t-foreach="o.pattern_cut_line_ids" t-as="line">
                                                <t t-if="line.type == 'lining' ">
                                                    <tr>
                                                        <td style="text-align:justify">
                                                            <a>
                                                                <t t-esc="line.type"/>
                                                            </a>
                                                        </td>
                                                        <td>
                                                            <a>
                                                                <t t-esc="line.pcs"/>
                                                            </a>
                                                        </td>
                                                    </tr>
                                                </t>
                                            </t>
                                        </tbody>
                                        <tr>
                                            <td></td>
                                            <td>
                                                <t t-set="sum_row" t-value="0"/>
                                                <t t-foreach="o.pattern_cut_line_ids" t-as="line">
                                                    <t t-if="line.type=='lining' " t-set="sum_row" t-value="sum_row+line.pcs"/>
                                                </t>
                                                <span>Total : <t t-esc="sum_row"/></span>
                                            </td>
                                        </tr>
                                    </table>

                                    <!--condition-->
                                    <t t-foreach="o.pattern_cut_line_ids" t-as="line">
                                        <t t-if="line.type == 'rf'">
                                            <span class="text-center">Type :
                                                <t t-esc="line.type"/>
                                            </span>
                                        </t>
                                    </t>
                                    <table width="100%" class="table table-bordered" style="border-color:black;">

                                        <thead>
                                            <tr>
                                                <th class="text-left">Type</th>
                                                <th class="text-left">Quantity</th>
                                            </tr>
                                        </thead>

                                        <tbody>
                                            <t t-foreach="o.pattern_cut_line_ids" t-as="line">
                                                <t t-if="line.type == 'rf' ">
                                                    <tr>
                                                        <td style="text-align:justify">
                                                            <a>
                                                                <t t-esc="line.type"/>
                                                            </a>
                                                        </td>
                                                        <td>
                                                            <a>
                                                                <t t-esc="line.pcs"/>
                                                            </a>
                                                        </td>
                                                    </tr>
                                                </t>
                                            </t>
                                        </tbody>
                                        <tr>
                                            <td></td>
                                            <td>
                                                <t t-set="sum_row" t-value="0"/>
                                                <t t-foreach="o.pattern_cut_line_ids" t-as="line">
                                                    <t t-if="line.type=='rf' " t-set="sum_row" t-value="sum_row+line.pcs"/>
                                                </t>
                                                <span>Total : <t t-esc="sum_row"/></span>
                                            </td>
                                        </tr>
                                    </table>

                                    <!--condition-->
                                    <t t-foreach="o.pattern_cut_line_ids" t-as="line">
                                        <t t-if="line.type == 'netto'">
                                            <span>Type :
                                                <t t-esc="line.type"/>
                                            </span>
                                        </t>
                                    </t>
                                    <table width="100%" class="table table-bordered" style="border-color:black;">
                                            <thead>
                                                <tr>
                                                    <th class="text-left">Type</th>
                                                    <th class="text-left">Quantity</th>
                                                </tr>
                                            </thead>
                                        <tbody>
                                            <t t-foreach="o.pattern_cut_line_ids" t-as="line">
                                                <t t-if="line.type == 'netto' ">
                                                    <tr>
                                                        <td style="text-align:justify">
                                                            <a>
                                                                <t t-esc="line.type"/>
                                                            </a>
                                                        </td>
                                                        <td>
                                                            <a>
                                                                <t t-esc="line.pcs"/>
                                                            </a>
                                                        </td>
                                                    </tr>
                                                </t>
                                            </t>
                                        </tbody>
                                        <tr>
                                            <td></td>
                                            <td>
                                                <t t-set="sum_row" t-value="0"/>
                                                <t t-foreach="o.pattern_cut_line_ids" t-as="line">
                                                    <t t-if="line.type=='netto' " t-set="sum_row" t-value="sum_row+line.pcs"/>
                                                </t>
                                                <span>Total : <t t-esc="sum_row"/></span>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </t>
            </div>
        </t>
    </template>
</odoo>
