        <div t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <div class="oe_structure"/>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="mt16">
                                <div>
                                    <h2>Material Type: Leather
                                    </h2>
                                </div>
                                <table width="100%" class="table table-bordered" style="border-color:black;">
                                    <thead>
                                        <tr>
                                            <th class="text-left">Material</th>
                                            <th name="th_mrp_bom_h">Material Details</th>
                                            <th class="text-left">UOM</th>
                                            <th class="text-left" groups="uom.group_uom">Unit</th>
                                            <th class="text-left">
                                                Length
                                            </th>
                                            <th class="text-left">
                                                Width
                                            </th>
                                            <th class="text-left">
                                                Sub-total
                                            </th>
                                            <th class="text-left">
                                                Loss %
                                            </th>
                                            <th class="text-left">
                                                Total
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="docs" t-as="pt">
                                            <t t-if="pt.material_type == 'leather' ">
                                                <tr>
                                                    <td style="text-align:justify">
                                                        <a>
                                                            <t t-esc="pt.pattern_name.name"/>
                                                        </a>
                                                    </td>
                                                    <td>
                                                        <a>
                                                            <t t-esc="pt.pattern_details"/>
                                                        </a>
                                                    </td>
                                                    <td>
                                                        <a>
                                                            <t t-esc="pt.uom.name"/>
                                                        </a>
                                                    </td>
                                                    <td>
                                                        <a>
                                                            <t t-esc="pt.qty"/>
                                                        </a>
                                                    </td>
                                                    <td>
                                                        <a>
                                                            <t t-esc="pt.length"/>
                                                        </a>
                                                    </td>
                                                    <td>
                                                        <a>
                                                            <t t-esc="pt.width"/>
                                                        </a>
                                                    </td>
                                                    <td>
                                                        <a>
                                                            <t t-esc=" '%.2f'% pt.subtotal"/>
                                                        </a>
                                                    </td>
                                                    <td>
                                                        <a>
                                                            <t t-esc="pt.loss_percentage"/>
                                                        </a>
                                                    </td>
                                                    <td>
                                                        <a>
