<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="work_sheet_tree_view" model="ir.ui.view">
        <field name="name">work.sheet.tree.view</field>
        <field name="model">mrp.work.sheet</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="master_work_sheet_id"/>
                <field name="work_center_name"/>
            </tree>
        </field>
    </record>

    <record id="work_sheet_form_view" model="ir.ui.view">
        <field name="name">work.sheet.form.view</field>
        <field name="model">mrp.work.sheet</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h2>
                            <field name="name" readonly="1"/>
                        </h2>
                    </div>
                    <group>
                        <field name="master_work_sheet_id"/>
                        <field name="work_center_name"/>
                    </group>
                    <notebook>
                        <page string="Work Sheet Cutting" attrs="{'invisible':['|',('work_center_name', '=', 'skyving'),('work_center_name', '=', 'assemble')]}">
                            <field name="work_sheet_line_ids" widget="one2many">
                                <tree editable="bottom">
                                    <field name="material"/>
                                    <field name="part_name"/>
                                    <field name="cutting_pending" />
                                    <field name="cutting_done" />
<!--                                    <field name="skiving_pending" invisible="1"/>-->
<!--                                    <field name="skiving_done" invisible="1"/>-->
<!--                                    <field name="assemble_pending" invisible="1"/>-->
<!--                                    <field name="assemble_done" invisible="1"/>-->
                                </tree>
                            </field>
                        </page>
                        <page string="Work Sheet Skiving" attrs="{'invisible':['|',('work_center_name', '=', 'cutting'),('work_center_name', '=', 'assemble')]}">
                            <field name="work_sheet_line_ids" widget="one2many">
                                <tree editable="bottom">
                                    <field name="material"/>
                                    <field name="part_name"/>
                                    <field name="skiving_pending" />
                                    <field name="skiving_done" />
<!--                                    <field name="assemble_pending" invisible="1"/>-->
<!--                                    <field name="assemble_done" invisible="1"/>-->
                                </tree>
                            </field>
                        </page>
                        <page string="Work Sheet Assemble" attrs="{'invisible':['|',('work_center_name', '=', 'skyving'),('work_center_name', '=', 'cutting')]}">
                            <field name="work_sheet_line_ids" widget="one2many">
                                <tree editable="bottom">
                                    <field name="material"/>
                                    <field name="part_name"/>
<!--                                    <field name="cutting_pending" invisible="1"/>-->
<!--                                    <field name="cutting_done" invisible="1"/>-->
<!--                                    <field name="skiving_pending" invisible="1"/>-->
<!--                                    <field name="skiving_done" invisible="1"/>-->
                                    <field name="assemble_pending" />
                                    <field name="assemble_done"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_work_sheet" model="ir.actions.act_window">
        <field name="name"> work sheet</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">mrp.work.sheet</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>